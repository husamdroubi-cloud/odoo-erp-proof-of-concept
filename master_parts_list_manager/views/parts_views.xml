<odoo>
    <record id="view_master_part_tree" model="ir.ui.view">
        <field name="name">master.part.tree</field>
        <field name="model">master.part</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="part_number"/>
                <field name="category"/>
                <field name="cost"/>
            </tree>
        </field>
    </record>

    <record id="view_master_part_form" model="ir.ui.view">
        <field name="name">master.part.form</field>
        <field name="model">master.part</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="part_number"/>
                        <field name="category"/>
                        <field name="description"/>
                        <field name="cost"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_master_parts_root" name="Master Parts" sequence="10"/>
    <menuitem id="menu_master_parts" name="Parts" parent="menu_master_parts_root" sequence="10" action="action_master_part"/>

    <record id="action_master_part" model="ir.actions.act_window">
        <field name="name">Master Parts</field>
        <field name="res_model">master.part</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
